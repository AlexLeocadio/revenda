@model Senior.Revenda.Contract.DTOs.ProprietarioDTO
@{
    ViewBag.Title = "Alterar - Proprietário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Proprietário <small>Alteração</small></h3>
    </div>
    <div class="panel-body">
        <form action="Alterar" method="post">
            @Html.HiddenFor(m => m.Id)
            <input hidden id="url" value="@Request.Url.Authority" />

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Nome, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Documento, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Documento, new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Endereco.Cep, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Endereco.Cep, new { @class = "form-control col-md-10", @onchange = "onChangeCep()" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Endereco.Logradouro, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Endereco.Logradouro, new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Endereco.Numero, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Endereco.Numero, new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Endereco.Bairro, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Endereco.Bairro, new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Endereco.Cidade, new { @class = "col-md-2" })
                @Html.TextBoxFor(m => m.Endereco.Cidade, new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12 form-group">
                @Html.LabelFor(m => m.Endereco.IdEstado, new { @class = "col-md-2" })
                @Html.DropDownListFor(m => m.Endereco.IdEstado, (SelectList)ViewBag.Estado, "Selecione", new { @class = "form-control col-md-10" })
            </div>

            <div class="col-md-12">
                <hr />
            </div>

            <div class="col-md-offset-10">
                <input type="button" class="btn btn-primary" onclick="Back()" value="Cancelar" />
                <input type="submit" class="btn btn-success" value="Alterar" />
            </div>
        </form>
    </div>
</div>

<script src="~/TypeScripts/GlobalScript.js"></script>
<script src="~/TypeScripts/Proprietario/BaseProprietario.js"></script>